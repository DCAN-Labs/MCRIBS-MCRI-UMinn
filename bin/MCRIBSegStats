#!/bin/bash

if [ -z "$1" ]
then
	echo "Usage: $0 <subject id>"
	exit
fi

SUBJID=$1

export SUBJECTS_DIR=`pwd`/freesurfer
cd $SUBJECTS_DIR/$SUBJID

mkdir -p stats
# we can't use the etiv option since we dont have the talairach.xfm file
mri_segstats --seg mri/aseg.mgz --sum stats/aseg.stats --empty --pv mri/T1.mgz --brainmask mri/brainmask.mgz --brain-vol-from-seg --excludeid 0 --excl-ctxgmwm --supratent --subcortgray --in mri/T1.mgz --in-intensity-name norm --in-intensity-units MR --surf-wm-vol --surf-ctx-vol --totalgray --ctab `dirname $0`/../lib/ASegStatsNeonateLUT.txt --subject $SUBJID
