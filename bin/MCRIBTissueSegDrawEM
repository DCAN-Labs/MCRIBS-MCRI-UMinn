#!/bin/bash

INDIR=RawT2RadiologicalIsotropic

if [ -z "$1" ]
then
	echo "Usage $0 <subjid>"
	exit
fi

if [ -z "$2" ]
then
	SUBJAGE=40
else
	SUBJAGE=$2
fi

SUBJID=$1

DRAWEMOUTDIR=TissueSegDrawEM/$SUBJID
OUTDIR=TissueSeg
mkdir -p $OUTDIR

if [ ! -f "$INDIR/${SUBJID}.nii.gz" ]
then
	echo "Input file not found"
else
	mkdir -p $DRAWEMOUTDIR
	`dirname $0`/.././MIRTK/MIRTK/Packages/DrawEM/pipelines/neonatal-pipeline-v1.1.sh $INDIR/${SUBJID}.nii.gz $SUBJAGE -d $DRAWEMOUTDIR -t $OMP_NUM_THREADS -c 0 -p 1 -v 1

# copy the brain mask and label files to the global tissue seg directory
	cp $DRAWEMOUTDIR/segmentations/${SUBJID}_brain_mask.nii.gz $OUTDIR
	cp $DRAWEMOUTDIR/segmentations/${SUBJID}_all_labels.nii.gz $OUTDIR

# we need to make the freesurfer directories
	mkdir -p freesurfer/$SUBJID
	P=`pwd`
	cd freesurfer/$SUBJID
	mkdir -p bem  label  morph  mpg  mri  rgb  scripts  stats  surf  tiff  tmp  touch  trash
	cd $P
	mri_convert $INDIR/${SUBJID}.nii.gz freesurfer/$SUBJID/mri/T1.mgz
	cp freesurfer/$SUBJID/mri/T1.mgz freesurfer/$SUBJID/mri/orig.mgz
	cp freesurfer/$SUBJID/mri/T1.mgz freesurfer/$SUBJID/mri/brain.mgz
	
#DRAWEMIMAGE=$DRAWEMOUTDIR/segmentations/${SUBJID}_all_labels.nii.gz
	DRAWEMIMAGE=$OUTDIR/${SUBJID}_all_labels.nii.gz
# make a symbolic link from the manedit file
# initially it is a link, if it is overwritten with a file then the manedit is used
	ln -sf ${SUBJID}_all_labels.nii.gz $OUTDIR/${SUBJID}_all_labels_manedit.nii.gz
	ASEGIMAGE=freesurfer/$SUBJID/mri/aseg.presurf.preunwmfix.mgz

	CMD="mri_binarize --i $DRAWEMIMAGE --o $ASEGIMAGE"

# wm
	for i in `seq 51 2 81`
	do
		CMD="$CMD --replace $i 2"
		CMD="$CMD --replace `expr $i + 1` 41"
	done

# gm
	for i in `seq 5 2 15`
	do
		CMD="$CMD --replace $i 3"
		CMD="$CMD --replace `expr $i + 1` 42"
	done

	for i in `seq 20 2 38`
	do
		CMD="$CMD --replace $i 3"
		CMD="$CMD --replace `expr $i + 1` 42"
	done

#outside the brain
	CMD="$CMD --replace 84 0"

# brainstem
	CMD="$CMD --replace 19 16"

# cerebellum
	CMD="$CMD --replace 18 47 --replace 17 8"

# CSF
	CMD="$CMD --replace 83 0"

# Corpus Callosum
	CMD="$CMD --replace 48 253"

# ventricles
	CMD="$CMD --replace 49 4 --replace 50 43"

# hippocampus
	CMD="$CMD --replace 2 53 --replace 1 17"

# caudate
	CMD="$CMD --replace 40 50 --replace 41 11"

# putamen/lentiform nucleus
	CMD="$CMD --replace 46 51 --replace 47 12"

# thalamus
	CMD="$CMD --replace 42 48 --replace 87 9 --replace 86 48 --replace 43 9"
# subthalamic nuclei
	CMD="$CMD --replace 44 52 --replace 45 13"
#CSF
#CMD="$CMD --replace 83 24"
# remove the CSF label due to aparc2aseg issues later on
	CMD="$CMD --replace 84 0"

# cranial background? this is going to be unmyelinated white matter
#CMD="$CMD --replace 85 0"

# amygdala
	CMD="$CMD --replace 4 54 --replace 3 18"

	$CMD

#ASEGDilateUnmWMFix $ASEGIMAGE $ASEGIMAGE
fi
