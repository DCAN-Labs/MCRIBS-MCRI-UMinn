#MRIBinarize --i $TISSUESEGDIR/$SUBJID/P${i}_dkt_gm_rhwith_skull_label_to_$SUBJID.nii.gz --o $TISSUESEGDIR/$SUBJID/P${i}_dkt_gm_rhwith_skull_label_to_$SUBJID.nii.gz --match 1 --binval 4 --noverbose
